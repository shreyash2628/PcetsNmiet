<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".cardsActivity.Faculty">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        android:orientation="horizontal">



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            app:startIconDrawable="@drawable/ic_baseline_search_24"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/top_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_bar"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faculty section"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/text_heading"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_heading"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    >



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#D81B60"
                        >

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           >


                           <ImageView
                               android:layout_margin="1dp"
                               android:layout_width="110dp"
                               android:layout_height="130dp"
                               android:src="@drawable/fehod"/>

                           <LinearLayout
                               android:layout_marginTop="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               >

                               <LinearLayout
                                   android:layout_margin="1dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   >

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Name: "
                                   android:textStyle="bold"
                                   android:textSize="22sp"/>

                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="Dr. Shekhar Rahane"
                                       android:textStyle="normal"
                                       android:textSize="20sp"/>


                               </LinearLayout>

                               <LinearLayout
                                   android:layout_margin="1dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   >

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Designation: "
                                       android:textStyle="bold"
                                       android:textSize="22sp"/>

                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="FE HOD"
                                       android:textStyle="normal"
                                       android:textSize="20sp"/>


                               </LinearLayout>


                               <LinearLayout
                                   android:layout_margin="1dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   >

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Experience: "
                                       android:textStyle="bold"
                                       android:textSize="22sp"/>

                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="12+ Yrs Teaching"
                                       android:textStyle="normal"
                                       android:textSize="20sp"/>


                               </LinearLayout>

                               <LinearLayout
                                   android:layout_margin="1dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   >

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="Email: "
                                       android:textStyle="bold"
                                       android:textSize="22sp"/>

                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="shekhar.rahane@nmiet.edu.in"
                                       android:textStyle="normal"
                                       android:textSize="20sp"/>


                               </LinearLayout>



                           </LinearLayout>


                       </LinearLayout>




                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#D81B60"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >


                            <ImageView
                                android:layout_margin="1dp"
                                android:layout_width="110dp"
                                android:layout_height="130dp"
                                android:src="@drawable/fehod"/>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <LinearLayout
                                    android:layout_margin="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Name: "
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Dr. Shekhar Rahane"
                                        android:textStyle="normal"
                                        android:textSize="20sp"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_margin="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Designation: "
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="FE HOD"
                                        android:textStyle="normal"
                                        android:textSize="20sp"/>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_margin="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Experience: "
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="12+ Yrs Teaching"
                                        android:textStyle="normal"
                                        android:textSize="20sp"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_margin="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Email: "
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="shekhar.rahane@nmiet.edu.in"
                                        android:textStyle="normal"
                                        android:textSize="20sp"/>


                                </LinearLayout>



                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hori_layout_department"
                        >
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_margin="10dp">


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/feDepartmentCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_margin="1dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/purple"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="First Year Department"
                                            android:textStyle="bold"
                                            android:textSize="17sp"
                                            android:textColor="@color/white"
                                            android:layout_margin="10dp"/>

                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/compDepartmentCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_margin="1dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/purple"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Computer Department"
                                            android:textStyle="bold"
                                            android:textSize="17sp"
                                            android:textColor="@color/white"
                                            android:layout_margin="10dp"/>
                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/ITDepartmentCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_margin="1dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/purple"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="IT Department"
                                            android:textStyle="bold"
                                            android:textSize="17sp"
                                            android:textColor="@color/white"
                                            android:layout_margin="10dp"/>
                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/EntcDepartmentCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_margin="1dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/purple"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ENTC Department"
                                            android:textStyle="bold"
                                            android:textSize="17sp"
                                            android:textColor="@color/white"
                                            android:layout_margin="10dp"/>
                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/mechanicalDepartmentCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_margin="1dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"

                                    >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/purple"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Mechanical Department"
                                            android:textStyle="bold"
                                            android:textSize="17sp"
                                            android:textColor="@color/white"
                                            android:layout_margin="10dp"/>
                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>



                            </androidx.appcompat.widget.LinearLayoutCompat>






                        </HorizontalScrollView>







                    </LinearLayout>






                </LinearLayout>





            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/top_scroll"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
            android:id="@+id/fragment_container"
            >


            <!--            container for fragments-->

        </RelativeLayout>

       >
    </ScrollView>


</RelativeLayout>